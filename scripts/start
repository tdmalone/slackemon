#!/usr/bin/env bash

# Safer bash scripts.
set -euxo pipefail

# Start the Docker Compose containers detached from the current terminal, removing any previous
# containers.
docker-compose up -d --remove-orphans

# Run user start script, if it exists.
if [ -f `dirname $0`/start.local ]; then
   `dirname $0`/start.local
fi
